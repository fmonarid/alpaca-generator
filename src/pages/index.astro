---
import { ALPACA_CATEGORIES } from '../data/options.js';
import { Icon } from 'astro-icon/components';
import '@fontsource/outfit';
import '@fontsource/bungee';
import '@fontsource/bungee-shade';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>ðŸ¦™ Alpaca Generator - Build your own!</title>
  </head>
  <body>
    <main>
      <h1>ðŸ¦™ Alpaca Generator</h1>
      <div class="alpacaImgContainer">
        <div class="alpacaImgContainer-layers">
          {
            ALPACA_CATEGORIES.map((category) => {
              const defaultOption = category.options[0];
              return (
                <img
                  id={`layer-${category.id}`}
                  src={
                    defaultOption.filename
                      ? `/alpaca/${category.id}/${defaultOption.filename}`
                      : ''
                  }
                  alt={category.label}
                  style={{
                    zIndex: category.zIndex,
                    display: defaultOption.filename ? 'block' : 'none',
                  }}
                />
              );
            })
          }
        </div>
        <div class="alpacaImgContainer-actions">
          <button id="randomImg">
            <Icon name="lucide:shuffle" />
            <span>Random</span>
          </button>
          <button id="downloadImg">
            <Icon name="lucide:download" />
            <span>Download</span>
          </button>
        </div>
      </div>
      <div class="alpacaOptions">
        <div class="alpacaOptions-categories">
          <h2>Categories</h2>
          {
            ALPACA_CATEGORIES.filter(
              (category) => category.options.length > 1,
            ).map((category) => (
              <button id={`cat-${category.id}`}>{category.label}</button>
            ))
          }
        </div>
        <div class="alpacaOptions-styles">
          <h2>Style</h2>
          <div id="styles-container"></div>
        </div>
      </div>
    </main>
    <style is:global>
      * {
        box-sizing: border-box;
      }
      html,
      body {
        font-family: 'Outfit', sans-serif;
        font-size: 16px;
        margin: 0;
        background-color: #f2f2f2;
        color: #062a62;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        text-transform: uppercase;
        margin-top: 0;
        font-family: 'Bungee', sans-serif;
      }
      button {
        font-family: 'Outfit', sans-serif;
        font-size: 1.2rem;
        color: #1056c7;
        background-color: transparent;
        border: 2px solid #1056c7;
        border-radius: 1rem;
        padding: 0.4rem 1rem;
        margin: 0.2rem;
        cursor: pointer;
        transition: all 0.2s ease;
      }
      button:hover,
      button.active {
        background-color: #1056c7;
        color: #fff;
      }

      main {
        padding: 1rem;
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }
      main h1 {
        grid-column: 1 / -1;
        text-align: center;
        margin: 0;
        font-size: 3rem;
        font-family: 'Bungee Shade', sans-serif;
      }

      .alpacaImgContainer {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
      }
      .alpacaImgContainer-layers {
        position: relative;
        width: 100%;
        max-width: 24rem;
        aspect-ratio: 1 / 1;
        border-radius: 1rem;
        overflow: hidden;
        margin: 0 auto;
      }
      .alpacaImgContainer-layers img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
      .alpacaImgContainer-actions {
        display: flex;
        gap: 1rem;
      }
      .alpacaImgContainer-actions button {
        background-color: #fff;
        border: 2px solid #062a62;
        border-radius: 0.4rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        font-weight: bold;
        box-shadow: -9px 9px 0px #062a62;
        transition: all 0.1s ease;
      }
      .alpacaImgContainer-actions button:hover {
        transform: translate(-3px, 3px);
        box-shadow: -3px 3px 0px #1056c7;
        color: #1056c7;
      }

      .alpacaOptions {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      /* Desktop Layout */
      @media (min-width: 1024px) {
        main {
          grid-template-columns: auto 1fr;
          padding: 6rem;
        }

        .alpacaImgContainer {
          min-width: 24rem;
        }
      }
    </style>
  </body>
  <script>
    import { ALPACA_CATEGORIES as data } from '../data/options.js';

    // State management for selected options
    const state = {};
    let currentCategory = data[0].id;
    data.forEach((category) => {
      state[category.id] = category.options[0].id;
    });

    // Update image layers based on current state
    function updateAlpaca() {
      for (const categoryId in state) {
        const optionId = state[categoryId];
        const imgElement = document.getElementById(`layer-${categoryId}`);

        if (imgElement) {
          const categoryData = data.find((c) => c.id === categoryId);
          const optionData = categoryData.options.find(
            (o) => o.id === optionId,
          );

          if (optionData.filename) {
            imgElement.setAttribute(
              'src',
              `/alpaca/${categoryId}/${optionData.filename}`,
            );
            imgElement.style.display = 'block';
          } else {
            imgElement.style.display = 'none';
          }
        }
      }
    }

    // Render style/attribute buttons for the selected category
    function renderStyledButtons(categoryId) {
      currentCategory = categoryId;
      const container = document.getElementById('styles-container');
      const category = data.find((cat) => cat.id === categoryId);

      container.innerHTML = '';

      const catButtons = document.querySelectorAll(
        '.alpacaOptions-categories button',
      );
      catButtons.forEach((btn) => {
        btn.classList.toggle('active', btn.id === `cat-${categoryId}`);
      });

      category.options.forEach((option) => {
        const btn = document.createElement('button');
        btn.innerText = option.label;

        if (state[categoryId] === option.id) {
          btn.classList.add('active');
        }

        btn.onclick = () => {
          state[categoryId] = option.id;
          updateAlpaca();
          renderStyledButtons(categoryId);
        };
        container.appendChild(btn);
      });
    }

    // Category selection event listeners
    const categoryButtons = document.querySelectorAll(
      '.alpacaOptions-categories button',
    );
    categoryButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const categoryId = button.id.replace('cat-', '');
        renderStyledButtons(categoryId);
      });
    });

    // Initial render
    updateAlpaca();
    renderStyledButtons(data[0].id);

    // randomize img
    function randomizeAlpaca() {
      data.forEach((category) => {
        const randomIndex = Math.floor(Math.random() * category.options.length);
        state[category.id] = category.options[randomIndex].id;
      });

      updateAlpaca();
      renderStyledButtons(currentCategory);
    }

    // download image
    async function downloadAlpaca() {
      const canvas = document.createElement('canvas');
      canvas.width = 1000;
      canvas.height = 1000;
      const ctx = canvas.getContext('2d');

      const sortedCategories = [...data].sort((a, b) => a.zIndex - b.zIndex);

      for (const category of sortedCategories) {
        const optionId = state[category.id];
        const optionData = category.options.find((o) => o.id === optionId);

        if (optionData.filename) {
          await new Promise<void>((resolve) => {
            const img = new Image();
            img.src = `/alpaca/${category.id}/${optionData.filename}`;
            img.onload = () => {
              ctx.drawImage(img, 0, 0, 1000, 1000);
              resolve();
            };
          });
        }
      }

      const link = document.createElement('a');
      link.download = 'my-alpaca.png';
      link.href = canvas.toDataURL('image/png');
      link.click();
    }

    document.getElementById('randomImg').onclick = randomizeAlpaca;
    document.getElementById('downloadImg').onclick = downloadAlpaca;
  </script>
</html>
