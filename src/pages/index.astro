---
import { ALPACA_CATEGORIES } from '../data/options.js';
import { Icon } from 'astro-icon/components';
import '@fontsource/outfit';
import '@fontsource/bungee';
import '@fontsource/bungee-shade';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>ðŸ¦™ Alpaca Generator - Build your own!</title>
  </head>
  <body>
    <main>
      <h1>ðŸ¦™ Alpaca Generator</h1>
      <div class="alpacaImgContainer">
        {
          ALPACA_CATEGORIES.map((category) => {
            const defaultOption = category.options[0];
            return (
              <img
                id={`layer-${category.id}`}
                src={
                  defaultOption.filename
                    ? `/alpaca/${category.id}/${defaultOption.filename}`
                    : ''
                }
                alt={category.label}
                style={{
                  zIndex: category.zIndex,
                  display: defaultOption.filename ? 'block' : 'none',
                }}
              />
            );
          })
        }
      </div>
      <div class="alpacaOptions">
        <div class="alpacaOptions-categories">
          <h2>Categories</h2>
          {
            ALPACA_CATEGORIES.filter(
              (category) => category.options.length > 1,
            ).map((category) => (
              <button id={`cat-${category.id}`}>{category.label}</button>
            ))
          }
        </div>
        <div class="alpacaOptions-styles">
          <h2>Style</h2>
          <div id="styles-container"></div>
        </div>
      </div>
    </main>
    <style is:global>
      * {
        box-sizing: border-box;
      }
      html,
      body {
        font-family: 'Outfit', sans-serif;
        font-size: 16px;
        margin: 0;
        background-color: #f2f2f2;
        color: #062a62;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        text-transform: uppercase;
        margin-top: 0;
        font-family: 'Bungee', sans-serif;
      }
      main {
        padding: 1rem;
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }
      main h1 {
        grid-column: 1 / -1;
        text-align: center;
        margin: 0;
        font-size: 3rem;
        font-family: 'Bungee Shade', sans-serif;
      }

      .alpacaImgContainer {
        position: relative;
        width: 100%;
        max-width: 24rem;
        aspect-ratio: 1 / 1;
        border-radius: 1rem;
        overflow: hidden;
        margin: 0 auto;
      }
      .alpacaImgContainer img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }

      .alpacaOptions {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      .alpacaOptions button {
        font-family: 'Outfit', sans-serif;
        font-size: 1.2rem;
        color: #1056c7;
        background-color: transparent;
        border: 2px solid #1056c7;
        border-radius: 1rem;
        padding: 0.4rem 1rem;
        margin: 0.2rem;
        cursor: pointer;
        transition: all 0.2s ease;
      }
      .alpacaOptions button:hover,
      .alpacaOptions button.active {
        background-color: #1056c7;
        color: #fff;
      }

      /* Desktop Layout */
      @media (min-width: 1024px) {
        main {
          grid-template-columns: auto 1fr;
          padding: 6rem;
        }

        .alpacaImgContainer {
          min-width: 24rem;
        }
      }
    </style>
  </body>
  <script>
    import { ALPACA_CATEGORIES as data } from '../data/options.js';

    /**
     * GLOBAL STATE (State Management)
     * Object that stores which option is selected for each category.
     * Ex: { hair: 'short', eyes: 'panda' }
     */
    const state = {};
    data.forEach((category) => {
      // We initialize each category with the first option (default) from our data.
      state[category.id] = category.options[0].id;
    });

    /**
     * FUNCTION: updateAlpaca
     * Synchronizes the 'state' object with the <img> tags of each layer.
     * Iterates through all images and updates their 'src' according to the user's choice.
     */
    function updateAlpaca() {
      for (const categoryId in state) {
        const optionId = state[categoryId];
        // 'layer-' avoids ID conflict between the image and the category button.
        const imgElement = document.getElementById(`layer-${categoryId}`);

        if (imgElement) {
          const categoryData = data.find((c) => c.id === categoryId);
          const optionData = categoryData.options.find(
            (o) => o.id === optionId,
          );

          if (optionData.filename) {
            // If we have a valid image (e.g., backgrounds, hair, etc)
            imgElement.setAttribute(
              'src',
              `/alpaca/${categoryId}/${optionData.filename}`,
            );
            imgElement.style.display = 'block';
          } else {
            // If 'None' (e.g., accessories): we hide the <img> layer.
            imgElement.style.display = 'none';
          }
        }
      }
    }

    /**
     * FUNCTION: renderStyledButtons
     * Dynamically draws the style buttons (sub-options) within the "Style" section.
     * @param {string} categoryId - The ID of the selected category (e.g., 'hair').
     */
    function renderStyledButtons(categoryId) {
      const container = document.getElementById('styles-container');
      const category = data.find((cat) => cat.id === categoryId);

      // Clearing the container is essential to avoid "stacking" buttons from previous categories.
      container.innerHTML = '';

      const catButtons = document.querySelectorAll(
        '.alpacaOptions-categories button',
      );
      catButtons.forEach((btn) => {
        btn.classList.toggle('active', btn.id === `cat-${categoryId}`);
      });

      category.options.forEach((option) => {
        const btn = document.createElement('button');
        btn.innerText = option.label;

        /**
         * VISUAL STATE LOGIC:
         * Indicates which option is currently selected.
         * (The user will complete the full CSS styling later).
         */
        if (state[categoryId] === option.id) {
          btn.classList.add('active');
        }

        btn.onclick = () => {
          // Updates the data -> Changes the image on screen -> Redraws the buttons.
          state[categoryId] = option.id;
          updateAlpaca();
          renderStyledButtons(categoryId);
        };
        container.appendChild(btn);
      });
    }

    /**
     * CLICK CONFIGURATION: Main Categories
     */
    const categoryButtons = document.querySelectorAll(
      '.alpacaOptions-categories button',
    );
    categoryButtons.forEach((button) => {
      button.addEventListener('click', () => {
        // remove the 'cat-' prefix from the button ID to get the real category ID.
        const categoryId = button.id.replace('cat-', '');
        renderStyledButtons(categoryId);
      });
    });

    // --- INITIALIZATION ---
    // We do the first drawing of the images and open the first "drawer" (Background).
    updateAlpaca();
    renderStyledButtons(data[0].id);
  </script>
</html>
